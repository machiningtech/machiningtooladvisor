<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/verylightgray</item>
        <item name="android:statusBarColor">@color/machining_status</item>
    </style>

    <style name="machining_dark" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:statusBarColor">@color/machining_status</item>
        <item name="colorPrimaryDark">@color/machining_dark</item>
    </style>


</resources>
